{
  "manifest_version": 3,
  "name": "Engagium Attendance Tracker",
  "version": "1.0.0",
  "description": "Automatically track student attendance and participation during Google Meet meetings",
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Engagium Tracker"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*-*-*"
      ],
      "js": ["content/loader.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content/google-meet.js",
        "chunks/*",
        "assets/*"
      ],
      "matches": ["https://meet.google.com/*"]
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],

  "host_permissions": [
    "https://engagium.app/*",
    "http://localhost:3001/*"
  ],

  "options_page": "options/index.html"
}
